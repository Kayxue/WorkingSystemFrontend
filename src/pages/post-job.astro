---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.solid.jsx';
import PostJobForm from '../components/PostJobForm.solid.tsx';
const currentYear = new Date().getFullYear();
---

<Layout title="WorkNow - 發布職缺">
  <main class="post-job-page">
    <div class="post-job-container">
      <PostJobForm client:load />
    </div>
  </main>
  <footer class="bg-gray-800 text-white text-center py-6 w-full sm:py-8 text-xs sm:text-sm">
    <div>
      <p class="m-0">&copy; {currentYear} WorkNow. 保留所有權利。</p>
    </div>
  </footer>
</Layout>

<style>
  .post-job-page {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    min-height: calc(100vh - var(--navbar-height));
    padding: 2rem var(--padding-inline);
    padding-top: 5rem;
  }

  .post-job-container {
    background-color: #fff;
    padding: 2.5rem;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 800px;
  }

  .post-job-container h1 {
    margin-bottom: 1.5rem;
    color: #333;
    font-size: 1.8rem;
  }
</style>
