---
import Layout from '../../layouts/AdminLayout.astro';
import UserApprovalList from '../../components/admin/UserApprovalList.solid.tsx';
import { BACKEND_BASE_URL } from '../../Constant';

const response = await fetch(`${BACKEND_BASE_URL}/admin/pendingEmployer`, {
    method: 'GET',
    headers: {
        'Content-Type': 'application/json',
        'platform': "web-admin",
        'Cookie': Astro.request.headers.get('cookie') || ''
    },
    credentials: 'include'
});

const pendingUsers = await response.json();
